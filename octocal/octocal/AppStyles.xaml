<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Rectangle}" x:Key="HorizontalLine">
        <Setter Property="Height" Value="0.25" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>
    <Style TargetType="{x:Type Rectangle}" x:Key="BlackHorizontalLine"
           BasedOn="{StaticResource HorizontalLine}">
        <Setter Property="Fill" Value="Black" />
    </Style>
    <Style TargetType="{x:Type Rectangle}" x:Key="WhiteHorizontalLine"
           BasedOn="{StaticResource HorizontalLine}">
        <Setter Property="Fill" Value="White" />
    </Style>
</ResourceDictionary>